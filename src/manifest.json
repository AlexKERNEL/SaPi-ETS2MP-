{
	"manifest_version": 2,
	"version": "0.1.4",
	"name": "SaPI [ETS2MP]",
	"description": "Servers and Players Info for ETS2MP",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"icons": {
			"16":  "./img/16x16.png",
			"32":  "./img/32x32.png",
			"48":  "./img/48x48.png",
			"128": "./img/128x128.png"
	},
	"permissions": [
			"storage",
			"http://steamcommunity.com/*",
			"https://steamcommunity.com/*",
			"http://api.ets2mp.com/*",
			"http://ets2mp.com/*"
	],
	"content_scripts": [{
		"matches": [
				"http://steamcommunity.com/profiles/*",
				"http://steamcommunity.com/id/*",
				"https://steamcommunity.com/profiles/*",
				"https://steamcommunity.com/id/*",
				"http://steamcommunity.com//profiles/*",
				"http://steamcommunity.com//id/*",
				"https://steamcommunity.com//profiles/*",
				"https://steamcommunity.com//id/*",
				"http://ets2mp.com/index.php?page=profile&id=*"
		],
		"js": ["/js/script.js"],
		"css": ["/css/inject.css"]
		
	}],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background" : {
			"page": "background.html"
    },
   "web_accessible_resources": ["/js/inject.js"],
   "browser_action": {
			"default_title": "ETS2MP servers info",
			"default_icon": {
				"19": "./img/19x19.png",
				"38": "./img/38x38.png"
			},
			"default_popup": "popup.html"
    }
}
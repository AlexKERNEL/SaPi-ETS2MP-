{
	"manifest_version": 2,
	"version": "0.1.1",
	"name": "ETS2MP user info",
	"description": "Отображение информации о пользователе ETS2MP",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"icons": {
			"16":  "./icons/16x16.png",
			"32":  "./icons/32x32.png",
			"48":  "./icons/48x48.png",
			"128": "./icons/128x128.png"
	},
	"permissions": [
			"http://steamcommunity.com/*",
			"https://steamcommunity.com/*",
			"http://api.ets2mp.com/*",
			"http://ets2mp.com/*"
	],
	"content_scripts": [{
		"js": ["script.js"],
		"matches": [
			"http://steamcommunity.com/profiles/*",
			"http://steamcommunity.com/id/*",
			"https://steamcommunity.com/profiles/*",
			"https://steamcommunity.com/id/*"
		]
	}],
	"background" : {
			"page": "background.html"
    },
   "web_accessible_resources": ["/inject.js"],
   "browser_action": {
			"default_title": "ETS2MP user info",
			"default_icon": {
				"19": "./icons/19x19.png",
				"38": "./icons/38x38.png"
			},
			"default_popup": "info.html"
    }
}